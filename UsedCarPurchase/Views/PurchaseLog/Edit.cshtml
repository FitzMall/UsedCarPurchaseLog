            </div>
        </div>
    </div>
    <div class="col-sm-4">
        <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(m => m.Ucp_PurchasedBy, "Purchased By", new { @class = "col-sm-2" })
