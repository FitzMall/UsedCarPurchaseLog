@using UsedCarPurchase.Helpers
@model UsedCarPurchase.Models.EditVM

@{
    ViewBag.Title = "Used Cars Purchase Log | Edit P";
}

<div class="jumbotron">
    <h2>Edit Vehicle Purchase Request</h2>
</div>

@using (Html.BeginForm("Edit", "PurchaseLog"))
{
    @Html.HiddenFor(m => m.ID)
